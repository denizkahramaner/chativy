
<div class="container">
	<div class = "form">
		<h2> Tutor Registration </h2>
		<%= form_for(@user, :url => {:action => :post_register_tutor}) do |form| %>
			<!-- Display validation problems -->
			<% if @user.errors.full_messages.length > 0 %>
				<ul>
				<% @user.errors.full_messages.each do |current_message| %>
					<li>
						<%= current_message %>
					</li>
				<% end %>
				</ul>
			<% end %>
			<table>
				<tr>
					<td class="form_label">
						<%= form.label :first_name %>
				 	</td>
				 	<td>
				 		<%= form.text_field :first_name %>
				 	</td>
				</tr>
				<tr>
					<td class="form_label">
				 		<%= form.label :last_name %>
					</td>
					<td>
				 		<%= form.text_field :last_name %>
				 	</td>
				</tr>
				<tr>
					<td class="form_label">
				 	 	<label> Email </label>
				 	</td>
				 	<td>		 		
				 	 	<%= form.text_field :login %>
				 	</td>
				</tr>
				<tr>
					<td class="form_label">
				 	 	<label> High school </label>
				 	</td>
				 	<td>		 		
				 	 	<%= form.text_field :school %>
				 	</td>
				</tr>
				<tr>
					<td class="form_label">
				 	 	<%= form.label :password %>
				 	</td>
				 	<td>
				 		<%= form.password_field :password %>
				 	</td>
				</tr>
				<tr>
					<td class="form_label">
				 	 	<%= form.label :password_confirmation %>
				 	 </td>
				 	 <td>
				 	 	<%= form.password_field :password_confirmation %>
				 	</td>
				</tr>
				<tr>
					<td>
					</td>
					<td>		
						<%= submit_tag "Register" %>
					</td>
				</tr>
			</table>

		<% end %>
	</div>
</div>